[user]
  useConfigOnly = true
[init]
  defaultBranch = main
[core]
  editor = nvim
  excludesFile = ~/.config/git/ignore
  quotepath = false
[alias]
	ci = commit
	st = status
	br = branch
	co = checkout
[fetch]
  prune = true
[pull]
  rebase = false
# ~/.gitconfig.local は 各PCで手動作成する
[include]
  path = ~/.gitconfig.local